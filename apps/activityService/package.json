{
  "name": "anotherassignment-activity-service",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "tsc",
    "preinstall": "git config core.autocrlf false && git config core.eol lf",
    "start": "npm run build && npx copyfiles -u 2 src/config/*.json dist/config && node dist/app.js",
    "serve:dev": "nodemon src/app.ts",
    "test": "jest --verbose",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@hapi/joi": "~15",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-joi-validation": "4.0.0",
    "express-validator": "^6.12.1",
    "inversify": "^5.1.1",
    "joi-extract-type": "^15.0.8",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "6.6.2",
    "sequelize-typescript": "^2.1.0",
    "supertest": "^6.1.6",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/config": "^0.0.39",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "~15",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.7.1",
    "@types/sequelize": "^4.28.10",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ext": "*.ts",
    "watch": [
      "./src"
    ],
    "exec": "ts-node",
    "ignore": [
      "test/*",
      "docs/*"
    ],
    "delay": 2500
  }
}
